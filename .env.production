# .env.production - Production Environment
# ========================================

# API Configuration
VITE_API_BASE_URL=https://api.cellebrite.com/api
VITE_API_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=900000

# Authentication
VITE_JWT_STORAGE_KEY=screen_capture_auth_token
VITE_JWT_EXPIRES_CHECK=true

# File Upload Settings
VITE_MAX_FILE_SIZE=104857600
VITE_ALLOWED_IMAGE_TYPES=image/png,image/jpeg,image/webp,image/gif
VITE_ALLOWED_VIDEO_TYPES=video/webm,video/mp4,video/quicktime
VITE_UPLOAD_CHUNK_SIZE=5242880

# Production Settings
VITE_NODE_ENV=production
VITE_DEBUG_MODE=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_MOCK_API_DELAY=0

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_ENABLE_ANALYTICS=true

# Mock Data (Disabled in Production)
VITE_ENABLE_MOCK_MODE=false
VITE_MOCK_USER_DATA=false

# Performance Optimization
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_PWA=true
VITE_ENABLE_PRELOAD=true

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_DOMAINS=cellebrite.com,*.cellebrite.com

---
